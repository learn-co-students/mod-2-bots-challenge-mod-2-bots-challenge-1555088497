<% @robot.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>

<%= form_for @robot do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :image_url %>
<%= f.text_field :image_url %>

<%= f.collection_select(:ability_id, @abilities, :id, :name) %>

<%= f.submit 'Make New Robot' %>
<% end %>
